<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!--左侧菜单栏中功能部分textview的style-->
    <style name="left_menu_text_style">
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="login_edittext_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/login_et_background</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">20dp</item>
    </style>

    <style name="edittext_container_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">35dp</item>
        <item name="android:layout_marginLeft">35dp</item>
        <item name="android:background">@drawable/login_ll_background</item>
        <item name="android:divider">@drawable/login_divider_line</item>
        <item name="android:orientation">vertical</item>
        <item name="android:showDividers">middle</item>
    </style>


    <style name="login_button_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">35dp</item>
        <item name="android:layout_marginLeft">35dp</item>
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAllCaps">false</item>
    </style>


    <style name="mypopwindow_anim_style">
        <item name="android:windowEnterAnimation">@anim/popupwindow_show_anim</item>
        <!-- 指定显示的动画xml -->
        <item name="android:windowExitAnimation">@anim/popupwindow_hidden_anim</item>
        <!-- 指定消失的动画xml -->
    </style>


    <style name="mydialog_translucent_style" parent="android:style/Theme.Dialog">
        <item name="android:windowIsFloating">true</item><!--是否浮现在activity之上-->
        <item name="android:windowNoTitle">true</item><!--无标题-->
        <item name="android:windowBackground">@drawable/recoder_dialog_background</item><!--背景透明-->
        <item name="android:background">#00000000</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:backgroundDimEnabled">false</item><!--模糊-->
        <item name="android:backgroundDimAmount">0.6</item>
        <item name="android:windowFrame">@null</item><!--边框-->
    </style>


</resources>
